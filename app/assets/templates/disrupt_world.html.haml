
.hidden-xs.hidden-sm
  .jumbotron-fluid.cover-img(style="background-image: url('#{asset_path('/images/world-map-background.jpg')}')")
    .black-overlay
    .container

      .row.firstrow                     
        .col-lg-3.col-md-3.col-sm-3.hidden-xs
          .logo-holder(ng-if="false")
            .logo(style="background-image: url('#{asset_path('/images/guidebot.png')}')")        
        
          .logo-holder
            .logo
              .numberCircle
                .height_fix
                .score {{convert_score(worldScore)}}
                .title avg
        
        .col-lg-9.col-md-9.col-sm-9.col-xs-12
          .name-holder              
            .name
              World Standings

    .secondrow()
      .container
        .row
          .col-lg-3.col-md-3.col-sm-3.hidden-xs()

          .col-lg-9.col-md-9.col-sm-9.col-xs-12(ng-include src="'#{asset_path('shared/button-bar-world.html')}'" )



.hidden-lg.hidden-md()
  .jumbotron-fluid.cover-img(style="background-image: url('#{asset_path('/images/world-map-background.jpg')}')")
    .container
      .name-holder             
        .name
          World Standings
          /        
            .settings_btn.pull-right(data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample")
              %i.fa.fa-caret-down.fa-2x()
            %ul.dropdown-menu.collapse#collapseExample(ng-include src="'#{asset_path('shared/drop_nav_menu.html')}'" ))

  .secondrow()
    .container(ng-include src="'#{asset_path('shared/button-bar-world.html')}'" )
      

  .rewards.mobiledown.collapse.hidden-lg(ng-if="false" style="text-align:center;padding-bottom:10px;")
    %i.fa.fa-circle.navdot
    %i.fa.fa-circle.navdot(ng-repeat="reward in rewards" ng-click="setCurrentReward(reward)" ng-class="{active: reward == currentReward }")
    
    .mobile_rewards.well(ng-include src="'#{asset_path('shared/metro_rewards.html')}'" ) 

.container.main-page-container
  
  /%div.hidden-md.hidden-lg.hidden-sm
  /  %input(type="text" metro-typeahead on-selected="setOtherMetro()" name="metroName" ng-model="selectedMetro.name" placeholder="by Metro Area")
  

  .row(style="" )
  
    .col-xs-12.col-sm-12.col-md-3.col-lg-3()


    .col-xs-12.col-sm-12.col-md-9.col-lg-9


      /
        .board.team(style="margin-bottom:10px;")
          %a.item(ng-click="toggleRewards()" style="margin-top:0px;" )
            .av
              .teamCircle
                .rank 
                  %i.fa.fa-trophy.fa-1x
            .ranking-name(style="")
              Rewards 
            .bar-line(ng-style="getBarWidth(80)")
              .score(style="margin-right:-30px;")
                80

      .hidden-lg.hidden-md(ng-if="showRewards" style="margin-bottom:20px;width:95%;display:inline-block;" )
        .carousel.slide#reward-carousel( data-ride="carousel" )             
          .carousel-inner(role="listbox")
            .item.reward-square-holder( ng-repeat="reward in rewards" ng-class="{active: $index == currentReward } " ng-include src="'#{asset_path('shared/rewards-square.html')}'" ng-click="setCurrentReward($index)"  )
            /
              .item(ng-if="user.of.nitro && (user.boss || user.manager)")
                .reward-square-holder(ng-if="rewards.length < 4"  )
                  .reward-square.empty-reward
                    %a.add-button(href="#/boss/challenges")
                      %i.fa.fa-plus-circle.fa-4x
                    .detail
                      .desc
                        Add a reward     
          %a.left.carousel-control(data-target="#reward-carousel" role="button" data-slide="prev" style="cursor:pointer;" )
            %i.fa.fa-chevron-left(aria-hidden="true")
            %span.sr-only
              Previous
          %a.right.carousel-control(data-target="#reward-carousel" role="button" data-slide="next" style="cursor:pointer;" )
            %i.fa.fa-chevron-right(aria-hidden="true")
            %span.sr-only
              Next


      .row.hidden-xs.hidden-sm(ng-if="showRewards" style="margin-left:25px;padding-bottom:10px;")
        .col-md-3.col-sm-3.col-xs-6.reward-square-holder(ng-repeat="reward in rewards" ng-class="{active: $index == currentReward}" ng-include src="'#{asset_path('shared/rewards-square.html')}'" ng-click="setCurrentReward($index)"   )

        /
          .col-md-9(style="padding:0px;")
            .reward-tab-current
              {{rewards[currentReward].desc}}
              {{rewards[currentReward].criteria}}
        /
          .col-md-3.col-sm-3.col-xs-6.reward-square-holder(ng-if="rewards.length < 4")
            .reward-square.empty-reward(ng-if="user.of.nitro && (user.boss || user.manager)")
              %a.add-button(href="#/boss/challenges")
                %i.fa.fa-plus-circle.fa-4x
              .detail
                .desc
                  Add a reward

      .main_panel.leaderboard-holder(style="padding-top: 0px;")

        .board.team(ng-if="board == 'people' ")
          %div(ng-repeat="person in People")
            %a.item.animated.fadeIn( score="{{person.score}}" check-bar-width ng-class="{ me: user.nt == person.id, notme: user.nt != person.id }" ng-if="person.score > 0"  ng-click="handleBarClick($index, 'board')")
              .av(ng-if="person.pic != null")
                %img(ng-src="{{person.pic}}" ng-if="person.pic")
              .av(ng-if="person.pic == null")
                .teamCircle
                  .rank {{$index + 1}}

              .bar-line(ng-style="getBarWidth(person.score)")
                .ranking-name
                  .nameonboard
                    %span(ng-if="person.pic != null") 
                      {{$index + 1}}.
                    {{person.name}}
              
                .score(style="margin-right:-30px;")
                  {{convert_score(person.score)}}


        .board.team(ng-if="board == 'groups'  ")
          %div(ng-repeat="office in Offices" )
            %a.item.animated.fadeIn( score="{{office.score}}" check-bar-width ng-class="{me: user.oid == office.id}" ng-if="office.score > 0" ng-click="handleBarClick($index, 'board')" )

              .av()
                .teamCircle
                  .rank {{$index + 1}}

              .bar-line(ng-style="getBarWidth(office.score)")
                .ranking-name
                  .nameonboard
                    {{office.name}}
              
                .score(style="margin-right:-30px;")
                  {{convert_score(office.score)}}


        .board.team(ng-if="board == 'metros' ")
          %div(ng-repeat="metro in Metros")
            %a.item.animated.fadeIn(ng-click="handleBarClick($index, 'board')"  score="{{metro.score}}"  ng-class="" )

              .av()
                .teamCircle
                  .rank {{$index + 1}}
              
              .bar-line(ng-style="getBarWidth(metro.score)")
                .ranking-name
                  .nameonboard
                    {{metro.name}}
              
                .score(style="margin-right:-30px;" ng-if="metro.score > 0")
                  {{convert_score(metro.score)}}
                