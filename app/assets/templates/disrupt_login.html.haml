.setup
  .create
    .row.row-pad
      .col-md-7.col-md-offset-3
        %div{:style => "height:50px;"}
        %h1 Welcome back!
    .row
      .col-md-7.col-md-offset-3
        %a.btn.btn-primary.btn-ci.linkedin(ng-href="{{generateLinkedInAuthUrl()}}")
          %i.fa.fa-linkedin-square(style="padding-left:5px;")
          Log in with LinkedIn
        %br
        %a.btn.btn-ci.slack{:href => "/auth/slack", :style => "padding-left: 10px; height: 40px;"}
          %span{:style => "color:black;"} Log in with
          %img(src="/images/slack_Icon.png" style="height:36px; margin-top: -2px;padding-left: 0px;padding-right:8px;" )

    .row.row-pad
      .col-md-4.col-md-offset-3
        %p.text-muted(style="margin-top:10px;") 
          or Log in with your email.

        %form(role="form")
          .form-group
            %input.form-control#email(type="email" ng-model="creds.email" placeholder="Email" autofocus)
          .form-group
            %input.form-control#password(type="password" ng-model="creds.password" placeholder="Password")
          .row.row-pad
            .col-md-6
              %button.btn.btn-default.btn-ci.btn-block.btn-setup(ng-click="performLogin()")
                Log In
            .col-md-6
              %p.forgot
                %a(href="#/forgot") Forgot your password?
          
    .row.semi-spacious
      .col-md-6.col-md-offset-2
        %strong
          

    .row(ng-show="error.isError")
      .col-md-6.col-md-offset-2
        .alert.alert-danger(role="alert")
          {{error.message}}


