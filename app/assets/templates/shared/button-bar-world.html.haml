
/
  .noselect
    {{ getChallengeMonth() }}
    %span( style="color:#27c302;")
      {{getChallengeDuration(Date.now(),challenge.endTime)}} left
/
  %div
    %input(type="text" metro-typeahead on-selected="setOtherMetro()" name="metroName" ng-model="selectedMetro.name" placeholder="by Metro Area")


.row.hidden-xs(ng-if="true"  )

  .col-xs-4.button-bar-column()

    .button-bar-section()
      .primary()
        .battle-duration(style="padding-left:12px; padding-right:12px;padding-top:6px;padding-bottom:6px;")
          {{ getChallengeMonth() }}
          

  .col-xs-4.button-bar-column()
    .button-bar-section
      .btn.button-bar-button(type="button" data-toggle="dropdown")
        {{board_name}}

      %ul.dropdown-menu()
        %li()
          %a.primary(ng-if="hide_people != true" ng-click="setBoard('people')" ng-class="{active: board == 'people'}" style="")
            {{people_name}}
        %li
          %a.primary(ng-if="group =='office' || group == 'league'"  ng-click="setBoard('teams')" ng-class="{active: board == 'factions' || board == 'teams' }" style="" ng-hide="!user.admin" )
            Teams
        %li
          %a.primary(ng-if="group=='league' || group=='world'|| group=='metro'" ng-click="setBoard('groups')" ng-class="{active: board == 'groups'}" style="" )
            {{groups_name}}
        %li
          %a.primary(ng-if="group=='world'" ng-click="setBoard('metros')" ng-class="{active: board == 'metros'}" style="")
            Metros


  .col-xs-4.button-bar-column()
    .button-bar-section()
      .primary()
        .battle-duration(style="padding-left:12px; padding-right:12px;padding-top:6px;padding-bottom:6px;")
          Average

            
