.create.animated.fadeIn
  
  .row
    .col-md-7
      %div(ng-if="group_id == undefined")
        %a.btn.btn-primary.btn-ci.linkedin(ng-href="{{generateLinkedInAuthUrl()}}")
          %i.fa.fa-linkedin-square(style="padding-left:5px;")
          Sign up with LinkedIn
        %a.btn.btn-ci.slack{:href => "/auth/slack", :style => "padding-left: 10px; height: 40px;"}
          %span{:style => "color:black;"} Sign up with
          %img(src="/images/slack_Icon.png" style="height:36px;margin-top: -2px;padding-left: 0px;padding-right:10px;" )

        %p.text-muted(style="margin-top:10px;") 
          or Sign up with your email

      %form(role="form")
        .form-group
          %input.form-control#name(type="text" ng-model="creds.name" placeholder="Name")
        .form-group
          %input.form-control#email(type="email" ng-model="creds.email" placeholder="Email")
        .form-group
          %input.form-control#password(type="password" ng-model="creds.password" placeholder="Password")
        .row
          .col-md-8
            %button.btn.btn-default.btn-block.btn-ci.btn-setup(ng-click="createAccount()")
              Create Account
          .col-md-4
        .row.row-pad
          .col-md-9
            %span.fineprint
              We won't sell your personal info, or spam you, and you can remove your account at any time!

        .alert.alert-danger(ng-show="error.isError" role="alert")
          {{error.message}}


    .col-md-5
      .bots.hidden-xs
        .bot-talk.right.animated.zoomInRight(ng-if="partner_is_us" typewrite type-delay="100" type-delay="25" blink-delay="500" text="Anyone can start a group challenge on Count It for <strong>FREE</strong>. Companies <strong>GO PRO</strong> to set goals, fund rewards, create internal teams, and more. ")
        
        .bot-talk.right.animated.zoomInRight(ng-if="!partner_is_us" typewrite type-delay="100" type-delay="25" blink-delay="500" text="Hi! {{partner_name}} welcomes you to Count It. Once you create your personal account, we\'ll get you hooked up and into your group.")

        .bot-body.animated.tada
