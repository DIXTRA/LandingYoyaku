.row.side.city-tag
  .col-lg-3.col-md-3.side.hidden-sm.hidden-xs
    .ci-score
      .score {{location.spm}}
    .ci.title-lbl
      Count-it Score
    .list.hidden-sm.hidden-xs
      .title-lbl
        Top Cities
      %div.top-list(ng-repeat="city in cities")
        %a.btn.btn-default.btn-ci(ng-href="/#/city/{{city.slug}}")
          {{$index + 1}}. {{city.city}}, {{city.state}}

    .panel.panel-warning(ng-if="scopeData")
      .panel-heading
        %h3.panel-title
          {{scopeData.title}}
      .panel-body
        %pre
          {{scopeData.txt}}

  .col-lg-9.col-md-9.main
    .summary
      %h1(ng-mouseenter="scopeOn=1" ng-mouseleave="scopeOn=0")
        {{location.c}}, {{location.s.toUpperCase()}}
        %button.btn.btn-default.btn-xs.btn-ci(ng-if="user.admin && scopeOn" ng-click="runScope('loc', location.sl)") scope

      .visible-sm.visible-xs.side
        %span.ci-score
          %span.score {{location.spm}}
          <i>COUNT-IT SCORE</i>

      .info
        %ul.list-unstyled.list-inline
          %li
            %i.icon.ci-user
            {{location.coworkers}} {{location.coworkers == 1 ? 'Co-worker' : 'Co-workers'}}
          %li
            %i.icon.ci-team
            {{offices.length}} {{offices.length == 1? 'Team' : 'Teams'}}
          %li
            %i.icon.ci-money
            {{location.sponsoredOffices}} Sponsored



    %h1.heading
      Teams
    .board.team-list.no-pic(resizable bigWidth="765" smallWidth="620" mediumWidth="670")
      .item.clearfix(ng-repeat="office in offices" ng-class="{me: user.oid == office.id}"  data-score="{{office.score}}")
        .ranking
          {{$index + 1}}
        .info
          %table
            %tr
              %td.name
                %a(ng-href="#/office/{{office.slug}}")
                  {{office.name}}
              %td.score
                {{office.score}}
            %tr.hidden-xs
              %td(colspan="2")
                .bar(ng-style="getInfoWidth(office.score)")
                  .tick


    %div.bump.hidden-md.hidden-lg
      %h1.heading
        Other Top Cities
      .list
        %div(ng-repeat="city in cities")
          %a.btn.btn-default.btn-ci(ng-href="/#/city/{{city.slug}}")
            {{$index + 1}}. {{city.city}}, {{city.state}}
