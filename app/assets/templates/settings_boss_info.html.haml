            %input(type="checkbox" ng-disabled="isPro == false" name="cycling" id="a_cycling" ng-model="bike" ng-change="updateActivities()")
            %label.lbl(for="a_cycling")
              Cycling
          .checkbox-inline.checkbox-inline-margin(style="min-width:100px")
            %input(type="checkbox" ng-disabled="isPro == false" name="mindfulness" id="a_mindfulness" ng-model="mind" ng-change="updateActivities()")
