%form(ng-submit="updateName()" style="padding-top:10px;padding-bottom:10px;")

  .title.hidden-md.hidden-lg
    Group Name
  .row
    .title.col-md-4.hidden-xs.hidden-sm
      Group Name

    .col-md-6.col-sm-8.col-xs-8
      .form-group(ng-show="!user.norm")
        %input.form-control(style="" type="text" ng-model="formData.newName" placeholder="{{groupName}}")

    .col-md-2.col-sm-4.col-xs-4(ng-show="!user.norm")
      / .div(style="height:75px;")
      / .form-group(style="position:absolute;bottom:0;right:15px;")
      %button.btn.btn-primary.btn-ci.btn-disrupt(type="submit")
        Update

%form(ng-submit="confirmLocation()" style="padding-top:10px;padding-bottom:10px;")

  .title.hidden-md.hidden-lg
    HQ Location
  .row
    .title.col-md-4.hidden-xs.hidden-sm
      HQ Location

    .col-md-6.col-sm-8.col-xs-8
      %p
        {{metro_name}}

      .form-groupz(ng-show="!user.norm")
        %input.form-control(lookup-zip on-zip = "lookupZip()" type="text" ng-model="formData.companyZip" placeholder="Enter US ZIP Code" style="")

      /.zipload(style="display:inline-block;")

      .div(ng-show="locations.length > 0" style="display:inline-block")
        .radio(ng-repeat="location in locations" ng-if="locations.length > 0")
          %input(id="loc-{{$index}}" type="radio" name="selectedLocation" ng-click="selectLocation($index)" ng-checked="location_index == $index" )
          %label.lbl.padding-16(for="loc-{{$index}}") {{location.city}}, {{location.state | uppercase}}

      %p or

      .form-group(ng-show="!user.norm")
        %input.form-control.us_zip(country-typeahead typeahead-append-to-body="true" type="text" maxlength="5" ng-model="userCountry" placeholder="Country" tabindex=2)

        /.zipload(ng-if="locations.length == 0")

    .col-md-2.col-sm-4.col-xs-4(ng-show="!user.norm")
      %button.btn.btn-ci.btn-primary.btn-disrupt(ng-class="{disabled: !locationc }" ng-click="updateLocation()" )
        Update


