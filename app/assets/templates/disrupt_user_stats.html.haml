


.diary
  .row.log
    .col-sm-2.col-xs-3
      .stat-box(ng-if="challenge.active")
        .stat
          {{convert_score(weekly_score)}}
    .col-sm-10.col-xs-9
      .stat-line.title
        Weekly Average
      .stat-line
        {{pageUser.of.weekly_battle_display}}

  .row.log
    .col-sm-2.col-xs-3
      .stat-box
        .stat
          {{convert_score(weekly_best)}}
    .col-sm-10.col-xs-9
      .stat-line.title
        Best Day This Week
      .stat-line
        {{weekly_best_date | date:'MMMM dd, yyyy'}}

  .row.log
    .col-sm-2.col-xs-3
      .stat-box
        .stat
          {{convert_score(monthly_score)}}
    .col-sm-10.col-xs-9
      .stat-line.title
        Monthly Average
      .stat-line
        {{pageUser.of.monthly_battle_display}}  
    
  .row.log
    .col-sm-2.col-xs-3
      .stat-box
        .stat
          {{convert_score(monthly_best)}}
    .col-sm-10.col-xs-9
      .stat-line.title
        Best Day This Month
      .stat-line
        {{monthly_best_date | date:'MMMM dd, yyyy'}}


